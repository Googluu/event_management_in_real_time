{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "plugins": [
    "node"
  ],
  "rules": {
    // Reglas generales
    "comma-dangle": ["error", "never"],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "off",

    // Reglas espec√≠ficas para Node.js
    "node/no-extraneous-require": "error",
    "node/no-unsupported-features/es-syntax": "off",
    "node/shebang": "off",
    "node/no-missing-require": ["error", { "allowModules": ["aws-sdk"] }],
    "node/no-unpublished-require": ["error", { "allowModules": ["aws-sdk"] }]
  }
}
